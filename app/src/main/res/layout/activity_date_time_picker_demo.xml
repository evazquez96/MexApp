<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DateTimeDialog" android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <TextView android:id="@+id/Date" android:layout_height="wrap_content"
        android:layout_width="wrap_content"  android:text="Fecha"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Date1"
        android:layout_alignEnd="@+id/Date1" />


    <Button android:id="@+id/ButtonDemo" android:text="Inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/Time" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="Hora"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Date"
        android:layout_toEndOf="@+id/Date" />

    <Button android:id="@+id/ButtonAgregar" android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/txt_tiempo_dormido"
        android:layout_alignLeft="@+id/Date"
        android:layout_alignStart="@+id/Date"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/ButtonConsultar"
        android:text="Cnsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Time"
        android:layout_alignStart="@+id/Time" />

    <TextView
        android:id="@+id/lbl_tiempo_dormido"
        android:clickable="true"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo Dormido: "

        android:layout_below="@+id/ButtonDemo1"
        android:layout_alignRight="@+id/ButtonConsultar"
        android:layout_alignEnd="@+id/ButtonConsultar"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/txt_tiempo_dormido"
        android:clickable="true"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "

        android:layout_below="@+id/Time1"
        android:layout_toRightOf="@+id/ButtonConsultar"
        android:layout_toEndOf="@+id/ButtonConsultar"
        android:layout_marginTop="129dp" />

    <TextView android:id="@+id/Date1" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="Fecha"
        android:layout_alignBaseline="@+id/Time1"
        android:layout_alignBottom="@+id/Time1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/Time1" android:layout_height="wrap_content"
        android:layout_width="wrap_content"  android:text="Hora"
        android:layout_below="@+id/ButtonDemo"
        android:layout_alignLeft="@+id/Time"
        android:layout_alignStart="@+id/Time"
        android:layout_marginTop="34dp" />

    <Button android:id="@+id/ButtonDemo1" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="Fin"
        android:layout_alignBaseline="@+id/Time1"
        android:layout_alignBottom="@+id/Time1"
        android:layout_alignLeft="@+id/ButtonDemo"
        android:layout_alignStart="@+id/ButtonDemo" />


</RelativeLayout>