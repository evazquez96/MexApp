            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvcliente"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#393d42"
                    android:text="Cliente:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvcliente1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text=" "
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvorigen"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#393d42"
                    android:text="Origen:"
                    android:textSize="12dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tvcliente1" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintStart_toEndOf="@+id/tvshipment"
                    card_view:layout_constraintTop_toBottomOf="@+id/tvcliente1">

                    <TextView
                        android:id="@+id/tvorigentmp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12dp"
                        card_view:layout_constraintHorizontal_bias="0.0" />

                    <ImageView
                        android:id="@+id/img_navegar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/maps" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvdc"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Dirección Origen:"
                    android:textColor="#393d42"
                    android:textSize="12dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/rl1" />

                <TextView
                    android:id="@+id/tvdc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textSize="12dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/tvshipment"
                    card_view:layout_constraintTop_toBottomOf="@+id/rl1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvcitacarga"
                    android:layout_width="60dp"
                    android:layout_height="33dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Cita Carga:"
                    android:textColor="#393d42"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvcitacarga1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvdestino"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#393d42"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Destino:"
                    android:textSize="12dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tvcitacarga" />

                <RelativeLayout
