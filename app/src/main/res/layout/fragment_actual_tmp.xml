                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    card_view:layout_constraintStart_toEndOf="@+id/tvdestino"
                    card_view:layout_constraintTop_toTopOf="@+id/tvdestino">

